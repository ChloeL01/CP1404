BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: user_input
            multiline: False
            text: ""
            on_text_validate: app.convert_miles_to_km(user_input.text)
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.4
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
                on_release: app.convert_miles_to_km(user_input.text)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
                on_release: app.convert_miles_to_km(user_input.text)
#    Button:
#        text: "Convert miles to km"
#        on_press: app.convert_miles_to_km(user_input.text)
    Label:
        text: app.message
        color: (1, 1, 0, 1)
